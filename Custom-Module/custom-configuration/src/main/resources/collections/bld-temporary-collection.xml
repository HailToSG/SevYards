<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <collection name="bld_temporary_collection" idField="id">
        <prototype>
            <![CDATA[
            SELECT
              temp.id                 AS id,
              temp.area               AS area,
              buildings.type          AS type,
              buildings.state         AS state

            FROM build_temporary temp
            JOIN build_buildings buildings ON buildings.id = temp.buildings_id
            WHERE
              1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="bld_temporary_collection_view" collection="bld_temporary_collection" is-default="true">
        <display>
            <column field="area" name="Занимаемая площадь" type="integer" editable="false" sortable="true" width="50px" text-break-style="cut"/>
            <column field="type" name="Тип строения" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>