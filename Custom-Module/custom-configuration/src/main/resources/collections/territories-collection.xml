<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <collection name="ter_collection" idField="id">
        <prototype>
            <![CDATA[
            SELECT
              territory.id                 AS id,
              territory.territory_type    AS type,
              territory.name              AS name

            FROM ter_territory territory
            WHERE
              1=1 ::where-clause
            ]]>
        </prototype>

    </collection>

    <collection-view name="ter_collection_view" collection="ter_collection" is-default="true">
        <display>
            <column field="type" name="Тип территории" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="name" name="Адрес (название)" type="string" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>