<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <collection name="ter_public_collection" idField="id">
        <prototype>
            <![CDATA[
            SELECT
              territory.id                   AS id,
              territory.kind_of_territory    AS kind_of_territory,
              territory.summary_area         AS summary_area,
              territory.objects_area         AS objects_area

            FROM ter_public territory
            WHERE
              1=1 ::where-clause
            ]]>
        </prototype>

    </collection>

    <collection-view name="ter_public_collection_view" collection="ter_public_collection" is-default="true">
        <display>
            <column field="kind_of_territory" name="Вид общественной территории" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="summary_area" name="Общая площадь" type="integer" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="objects_area" name="Площадь зданий, сооружений, строений" type="integer" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>