<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Cущность "Строения" и сущности, которые относятся к Строениям-->

    <!-- Cущность "Строения" -->
    <domain-object-type name="build_buildings">
        <fields>
            <!--Ссылка на id инвентаризации -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

            <!--тип строения -->
            <string name="type" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние строения-->
            <string name="state" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

        <attachment-types>
            <attachment-type name="build_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Жилое строение" -->
    <domain-object-type name="build_residential">
        <fields>

            <!--площадь строения -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- ФИАС -->
            <string name="fias" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Адрес при отсутствии ФИАС -->
            <string name="no_fias_address" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id Строения-->
            <reference name="build_id" type="build_buildings">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

    <!-- Cущность "Нежилое капитальное строение" -->
    <domain-object-type name="build_permanent">
        <fields>

            <!--площадь строения -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>
            <!-- ФИАС -->
            <string name="fias" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
            <!-- Адрес при отсутствии ФИАС -->
            <string name="no_fias_address" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id Строения-->
            <reference name="build_id" type="build_buildings">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Cущность "Нежилое некапитальное строение" -->
    <domain-object-type name="build_temporary">
        <fields>

            <!--площадь строения -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Ссылка на id Строения-->
            <reference name="build_id" type="build_buildings">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

</configuration>