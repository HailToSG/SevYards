<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Сущность "Плоскостные и Линейные" и сущности, которые относятся к "Плоскостным и Линейным"-->

    <!-- Сущность -->
    <domain-object-type name="planar_linear">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

            <!--тип объекта класса Плоскостные и Линейные -->
            <string name="type" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта класса Плоскостные и Линейные-->
            <string name="state" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

        <attachment-types>
            <attachment-type name="planar_linear_photo"/>
        </attachment-types>
    </domain-object-type>

    <!--Сущность "Дворовой проезд" -->
    <domain-object-type name="yard_passage">
        <fields>
            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>


            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Тротуар" -->
    <domain-object-type name="sidewalk">
        <fields>

            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Велопарковка"-->
    <domain-object-type name="bicycle_parking">
        <fields>
            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Количество парковочных мест -->
            <long name="number_parking_places">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Автопарковка"-->
    <domain-object-type name="car_parking">
        <fields>

            <!-- Количество парковочных мест -->
            <long name="number_of_parking_places">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Количество парковочных мест для инвалидов -->
            <long name="numb_park_places_invalids">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- наличие обозначения -->
            <string name="" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Габариты места парковки -->
            <string name="" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Детская площадка" -->
    <domain-object-type name="playground">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Возрастная группа -->
            <string name="age_group" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

    <!-- Сущность "Площадка для выгула собак" -->
    <domain-object-type name="dog_walking_area">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <boolean name="is_enclosure"/>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

    <!-- Сущность "Спортивная площадка" -->
    <domain-object-type name="sport_ground">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- вид спорта -->
            <string name="type_sport" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Освещение -->
            <string name="lighting" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Велодорожка" относится к классу "Плоскостные и Линейные" -->
    <domain-object-type name="bicycle_road">
        <fields>
            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!-- Сущность "Контейнерная площадка"-->
    <domain-object-type name="container_square">
        <fields>
            
            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Наличие места для КГО-->
            <boolean name="availability_place_kgo" not-null="true"/>

            <!--Количество контейнеров -->
            <long name="number_containers">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Ссылка на id объекта "Плоскостные и Линейные"-->
            <reference name="planar_linear_id" type="planar_linear">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

</configuration>