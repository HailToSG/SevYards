<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Сущность "Плоскостные и Линейные" и сущности, которые относятся к "Плоскостным и Линейным"-->

    <!-- Сущность -->
    <domain-object-type name="planar_linear">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

            <!--тип объекта класса Плоскостные и Линейные -->
            <string name="type" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта класса Плоскостные и Линейные-->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

        <attachment-types>
            <attachment-type name="planar_linear_photo"/>
        </attachment-types>
    </domain-object-type>

    <!--Сущность "Дворовой проезд" -->
    <domain-object-type name="pl_yard_passage">
        <fields>
            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта класса Дворовой проезд -->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>

        <attachment-types>
            <attachment-type name="yard_passage_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Тротуар" -->
    <domain-object-type name="pl_sidewalk">
        <fields>

            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта класса Тротуар-->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="sidewalk_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Велопарковка"-->
    <domain-object-type name="pl_bicycle_parking">
        <fields>
            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Количество парковочных мест -->
            <long name="number_parking_places">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--состояние объекта класса Велопарковка-->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="bicycle_parking_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Автопарковка"-->
    <domain-object-type name="pl_car_parking">
        <fields>

            <!-- Количество парковочных мест -->
            <long name="number_of_parking_places">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Количество парковочных мест для инвалидов -->
            <long name="numb_park_places_invalids">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <string name="coating" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- наличие обозначения -->
            <boolean name="is_signed"/>

            <!-- Габариты места парковки -->
            <long name="parking_size">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--состояние объекта класса Автопарковка -->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="car_parking_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Детская площадка" -->
    <domain-object-type name="pl_playground">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <decimal name="coating">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Возрастная группа -->
            <decimal name="age_group">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--состояние объекта класса Детская площадка -->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="playground_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Площадка для выгула собак" -->
    <domain-object-type name="pl_dog_walking_area">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Наличие ограждения -->
            <boolean name="has_enclosure" not-null="true"/>

            <!--состояние объекта класса Площадка для выгула собак -->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="dog_walking_area_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Спортивная площадка" -->
    <domain-object-type name="pl_sport_ground">
        <fields>

            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Покрытие -->
            <string name="coating" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- вид спорта -->
            <string name="type_sport" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Освещение -->
            <string name="lighting" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта класса Спортивная площадка -->
            <string name="state" length="100">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>

        <attachment-types>
            <attachment-type name="sport_ground_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Велодорожка" относится к классу "Плоскостные и Линейные" -->
    <domain-object-type name="pl_bicycle_road">
        <fields>
            <!--Ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <decimal name="coating">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--состояние объекта класса Велодорожка -->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="bicycle_road_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Контейнерная площадка"-->
    <domain-object-type name="pl_container_square">
        <fields>
            
            <!--Площадь -->
            <long name="square">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- покрытие -->
            <decimal name="coating">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Наличие места для КГО-->
            <boolean name="availability_place_kgo" not-null="true"/>

            <!--Количество контейнеров -->
            <long name="number_containers">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--состояние объекта класса Контейнерная площадка -->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>
        </fields>
        <attachment-types>
            <attachment-type name="container_square_photo"/>
        </attachment-types>
    </domain-object-type>

</configuration>