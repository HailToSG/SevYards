<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Cущность "Элементы озеленения" (ЭО) и сущности, которые относятся к ЭО -->

    <!-- Cущность "Элементы озеленения" (ЭО) -->
    <domain-object-type name="gard_gardening">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

            <!--Состояние элемента озеленения-->
            <string name="state" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

        <attachment-types>
            <attachment-type name="gard_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Дерево" относится к ЭО -->
    <domain-object-type name="gard_tree">
        <fields>

            <!--Вид дерева -->
            <decimal name="kind">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Высота дерева -->
            <decimal name="height">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="tree_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Вертикальное озеленение" относится к ЭО -->
    <domain-object-type name="gard_vertical">
        <fields>

            <!--площадь вертикального озеленения -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="vertical_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Цветник" относится к ЭО -->
    <domain-object-type name="gard_parterre">
        <fields>
            <!--Тип цветника-->
            <decimal name="kind">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Размер цветника-->
            <decimal name="size">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="parterre_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Живая изгородь" относится к ЭО -->
    <domain-object-type name="gard_green_hedge">
        <fields>
            <!-- Протяженность изгороди -->
            <long name="length">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Состав-->
            <decimal name="composition">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Высота изгороди -->
            <decimal name="height">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--техника -->
            <decimal name="trim_technique">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="green_hedge_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Кустарник" относится к ЭО -->
    <domain-object-type name="gard_bush">
        <fields>

            <!--Вид -->
            <decimal name="kind">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Высота -->
            <decimal name="height">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="bush_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Cущность "Газон" относится к ЭО -->
    <domain-object-type name="gard_lawn">
        <fields>

            <!--площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--тип газона-->
            <decimal name="type">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Состояние элемента озеленения-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>
        <attachment-types>
            <attachment-type name="lawn_photo"/>
        </attachment-types>
    </domain-object-type>

</configuration>