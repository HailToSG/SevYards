<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Доменный объект "Территория"-->
    <domain-object-type name="ter_territory">
        <fields>
            <string name="name" length="1000"/>
            <string name="territoryType" length="1000"/>
        </fields>
    </domain-object-type>

    <!--Доменный объект "Общественная территория"-->
    <domain-object-type name="ter_public">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventoryId" type="inventory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Ссылка на тип территории-->
            <reference name="type" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Вид общественной территории -->
            <string name="kind_of_territory" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Общая площадь -->
            <long name="summary_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Площадь зданий, сооружений, строений -->
            <long name="objects_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>
        </fields>
    </domain-object-type>

    <!--Доменный объект "Дворовая территория"-->
    <domain-object-type name="ter_yard">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventoryId" type="inventory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Ссылка на тип территории-->
            <reference name="type" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Общая площадь -->
            <long name="summary_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Площадь зданий, сооружений, строений -->
            <long name="objects_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>
        </fields>
    </domain-object-type>

    <domain-object-type name="ter_yard">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventoryId" type="inventory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Ссылка на тип территории-->
            <reference name="type" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Общая площадь -->
            <long name="summary_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Площадь зданий, сооружений, строений -->
            <long name="objects_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>
        </fields>
    </domain-object-type>

    <domain-object-type name="ter_private_housing">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventoryId" type="inventory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Ссылка на тип территории-->
            <reference name="type" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Состояние фасада-->
            <string name="facadeState" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Состояние придомовой территории-->
            <string name="territoryState" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Информация по подписании соглашения о благоустройстве-->
            <text name="contractOfImprovement"/>

        </fields>
    </domain-object-type>

    <domain-object-type name="ter_UL_IP">
        <fields>
            <!--Ссылка на инвентаризацию -->
            <reference name="inventoryId" type="inventory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!--Состояние фасада-->
            <string name="facadeState" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Состояние придомовой территории-->
            <string name="territoryState" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Информация по подписании соглашения о благоустройстве-->
            <text name="contractOfImprovement"/>

        </fields>
    </domain-object-type>

</configuration>