<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Доменный объект "Территория" и доменные объекты типов территории-->

    <!--Доменный объект "Территория"-->
    <domain-object-type name="ter_territory">
        <fields>
            <string name="name" length="100"/>
            <string name="number" length="100"/>
            <string name="territory_type" length="100"/>
        </fields>
    </domain-object-type>

    <!--Доменный объект "Общественная территория"-->
    <domain-object-type name="ter_public">
        <fields>

            <!--Вид общественной территории -->
            <string name="kind_of_territory" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Общая площадь -->
            <long name="summary_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Площадь зданий, сооружений, строений -->
            <long name="objects_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Ссылка на id Территории-->
            <reference name="territory_id" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!--Доменный объект "Дворовая территория"-->
    <domain-object-type name="ter_yard">
        <fields>

            <!--Общая площадь -->
            <long name="summary_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Площадь зданий, сооружений, строений -->
            <long name="objects_area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!--Ссылка на id Территории-->
            <reference name="territory_id" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

    <!--Доменный объект "Объект индивидуального жилищного строительства"-->
    <domain-object-type name="ter_private_housing">
        <fields>

            <!--Состояние фасада-->
            <string name="facade_state" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Состояние придомовой территории-->
            <string name="territory_state" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Информация по подписании соглашения о благоустройстве-->
            <text name="contract_of_improvement"/>

            <!--Ссылка на id Территории-->
            <reference name="territory_id" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

    <!--Доменный объект "Объект недвижимого имущества и зем.участков у ЮЛ и ИП"-->
    <domain-object-type name="ter_ulip">
        <fields>

            <!--Состояние фасада-->
            <string name="facade_state" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Состояние прилегающей территории-->
            <string name="territory_state" length="1000">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--Информация по подписании соглашения о благоустройстве-->
            <text name="contract_of_improvement"/>

            <!--Ссылка на id Территории-->
            <reference name="territory_id" type="ter_territory">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>
        </fields>
    </domain-object-type>

</configuration>