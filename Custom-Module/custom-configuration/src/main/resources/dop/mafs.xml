<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Сущность МАФ и сущности, которые относятся к МАФ-->

    <!--Сущность "МАФ"(малая архитектурная форма)-->
    <domain-object-type name="maf">
        <fields>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

            <!--тип объекта МАФ -->
            <string name="type" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!--состояние объекта МАФ-->
            <string name="state" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

        </fields>

        <attachment-types>
            <attachment-type name="maf_photo"/>
        </attachment-types>
    </domain-object-type>

    <!--Сущность "Накопители ТКО"-->
    <domain-object-type name="maf_trash_can">
        <fields>

            <!-- материал, из которого сделан накопитель ТКО -->
            <decimal name="material">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- Вместимость, куб.м -->
            <long name="capacity">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- состояние покрытия -->
            <decimal name="state_coating_trash">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Тип ТКО-->
            <decimal name="kind">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--состояние объекта МАФ-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>

        </fields>

        <attachment-types>
            <attachment-type name="trash_can_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Оснащения детских площадок"-->
    <domain-object-type name="maf_playground_equipment">
        <fields>
            <!-- Тип оснащения -->
            <decimal name="kind">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- материал опор площадки -->
            <decimal name="support_material">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- материал сидений -->
            <decimal name="seat_material">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- тип подвеса -->
            <decimal name="type_suspension">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- состояние покрытия -->
            <decimal name="state_coating">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--состояние объекта МАФ-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>

        <attachment-types>
            <attachment-type name="playground_equip_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Скамьи"-->
    <domain-object-type name="maf_benches">
        <fields>

            <!-- ширина -->
            <long name="width">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- материал, из которого сделана скамья -->
            <decimal name="material">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- состояние покрытия -->
            <decimal name="state_coating">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- имеет спинку -->
            <boolean name="has_a_back" not-null="true"/>

            <!--состояние объекта МАФ-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>

        <attachment-types>
            <attachment-type name="benches_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Столы"-->
    <domain-object-type name="maf_tables">
        <fields>

            <!-- Размер стола -->
            <long name="size">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- форма стола -->
            <decimal name="shape">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- назначение стола -->
            <decimal name="appointment">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!-- материал, из которого сделан стол  -->
            <decimal name="material">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--состояние объекта МАФ-->
            <decimal name="state">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </decimal>

            <!--Ссылка на инвентаризацию -->
            <reference name="inventory_id" type="inventory"/>

            <!--Ссылка на id территории -->
            <reference name="territory_id" type="ter_territory"/>
        </fields>

        <attachment-types>
            <attachment-type name="tables_photo"/>
        </attachment-types>
    </domain-object-type>

    <!-- Сущность "Спортивный инвентарь"-->
    <domain-object-type name="maf_sport_equipments">
        <fields>

            <!-- Тип инвентаря -->
            <decimal name="kind">
