<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="gardening_form" domain-object-type="gard_gardening" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab>
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="typeGardeningLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="typeGardeningValue"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="stateGardeningLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="stateGardeningValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Элемент озеленения</text>
            </label>

            <label id="typeGardeningLabel">
                <text>Тип объекта</text>
            </label>
            <text-box id="typeGardeningValue">
                <field-path value="type"/>
            </text-box>

            <label id="stateGardeningLabel">
                <text>Состояние объекта</text>
            </label>
            <text-box id="stateGardeningValue">
                <field-path value="state"/>
            </text-box>

        </widget-config>
    </form>
</configuration>