<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для служебного доменного объекта "Пользователи" -->
    <form name="person_form" domain-object-type="Person" is-default="true" min-width="900px">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="false">

                <tab name="Пeрсона">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="left" width="200px">
                                        <widget id="loginLabel"/>
                                    </td>
                                    <td width="600px">
                                        <widget id="loginValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="left" width="200px">
                                        <widget id="nameLabel"/>
                                    </td>
                                    <td width="600px">
                                        <widget id="nameValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="left" width="200px">
                                        <widget id="lastNameLabel"/>
                                    </td>
                                    <td  width="600px">
                                        <widget id="lastNameValue"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="left" width="200px">
                                        <widget id="emailLabel"/>
                                    </td>
                                    <td width="600px">
                                        <widget id="emailValue"/>
                                    </td>
                                </tr>


                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Принадлежность к группе">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="left">
                                        <widget id="personGroupValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Персона организации</text>
            </label>

            <label id="loginLabel">
                <text>Логин</text>
            </label>
            <text-box id="loginValue">
                <field-path value="Login"/>
            </text-box>

            <label id="nameLabel">
                <text>Имя</text>
            </label>
            <text-box id="nameValue">
                <field-path value="Firstname"/>
            </text-box>

            <label id="lastNameLabel">
                <text>Фамилия</text>
            </label>
            <text-box id="lastNameValue">
                <field-path value="Lastname"/>
            </text-box>

            <label id="emailLabel">
                <text>E-mail</text>
            </label>
            <text-box id="emailValue">
                <field-path value="Email"/>
            </text-box>

            <linked-domain-objects-table id="personGroupValue" modal-width="500px" modal-height="400px" max-tooltip-width="300px">
                <field-path value="person_role^person"/>
                <linked-form name="person_role_form" inline="true"/>
                <summary-table>
                    <summary-table-column header="Привязанные роли" widget-id="roleSelectionValue">
                        <pattern value="{role.name}"/>
                    </summary-table-column>
                </summary-table>
                <selection-sort-criteria>
                    <sort-criterion field="role.name" order="ASC"/>
                </selection-sort-criteria>
                <single-choice value="true"/>
            </linked-domain-objects-table>
        </widget-config>
    </form>

