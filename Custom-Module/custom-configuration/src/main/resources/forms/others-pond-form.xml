<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="others_pond_form" domain-object-type="other_pond" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab>
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="Label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="Value"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Осветительное устройство</text>
            </label>

            <label id="othersPondTypeLabel">
                <text>Тип</text>
            </label>
            <enumeration-box id="othersPondTypeValue">
                <field-path value="pond_type"/>
                <mapping>
                    <map value="Ртутный"/>
                    <map value="Галогеновый"/>
                    <map value="Люминисцентный"/>
                    <map value="Накаливания"/>
                    <map value="Светодиодный"/>
                    <map value="Иное"/>
                </mapping>
            </enumeration-box>



            <label id="othersStateLightingDeviceLabel">
                <text>Состояние водоёма</text>
            </label>
            <enumeration-box id="othersStatePondValue">
                <field-path value="state"/>
                <mapping>
                    <map value="Отличное"/>
                    <map value="Требует обслуживание"/>
                    <map value="Требует ремонта"/>
                    <map value="Требует замены"/>
                </mapping>
            </enumeration-box>

            <label id="othersLightingDevicePhotoLabel">
                <text>Фото</text>
            </label>
            <attachment-box id="othersLightingDevicePhotoValue">
                <field-path value="pond_photo^other_pond"/>
                <attachment-type-ref name="pond_photo"/>
                <scanner enabled="true"/>
                <selection-style name="table"/>
                <images-only>
                    <read-only-preview width="200px" height="200px" preserve-proportion="true"/>
                    <small-preview width="200px" height="200px" preserve-proportion="true"/>
                    <large-preview width="600px" preserve-proportion="true"/>
                </images-only>
                <choice-style name="popup"/>
            </attachment-box>

        </widget-config>
    </form>
</configuration>