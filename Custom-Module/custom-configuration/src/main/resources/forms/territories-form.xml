<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="territories_form" domain-object-type="ter_territory" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Территория</text>
            </label>

            <label id="territoryAddressLabel">
                <text>Адрес (название)</text>
            </label>
            <text-box id="territoryAddressValue">
                <field-path value="name"/>
            </text-box>

            <label id="territoryTypeLabel">
                <text>Тип территории</text>
            </label>
            <enumeration-box id="territoryTypeValue">
                <field-path value="territory_type"/>
                <mapping>
                    <map display-text="Общественная" value="public_area"/>
                    <map display-text="Дворовая" value="yard_area"/>
                    <map display-text="ИЖС" value="IHC"/>
                    <map display-text="Объект ЮЛ или ИП" value="ULorIP"/>
                </mapping>
            </enumeration-box>


        </widget-config>

    </form>
</configuration>