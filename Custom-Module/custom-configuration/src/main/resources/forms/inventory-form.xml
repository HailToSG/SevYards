<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="inventory_form" domain-object-type="inventory" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab name="Инфо">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="dateStartLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="dateStartValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="dateEndLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="dateEndValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Правообладатели">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="holdersNameValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Строения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="buildingsLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Объекты озеленения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="gardeningLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="МАФы">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="mafsLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Плоскостные и линейные">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="planarLinearLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Иные объекты">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="othersLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Галерея">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="galleryLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Инвентаризация</text>
            </label>

            <label id="dateStartLabel">
                <text>Время начала</text>
            </label>
            <date-box id="dateStartValue">
                <field-path value="start_time"/>
            </date-box>

            <label id="dateEndLabel">
                <text>Время конца</text>
            </label>
            <date-box id="dateEndValue">
                <field-path value="end_time"/>
            </date-box>


            <label id="infoLabel">
                <text>Инфо территории</text>
            </label>

            <label id="holdersNameLabel">
                <text>Наименование правообладателя</text>
            </label>
            <table-viewer id="holdersNameValue"  show-workflow-menu="false" show-actions-menu="true">
                <collection-table-buttons display-all-possible="true"/>
                <collection-viewer>
                    <collection-ref name="rightholder_collection"/>
                    <collection-view-ref name="rightholder_collection_view"/>
                    <act:tool-bar useDefault="true"/>

                    <filter-panel panel-state="open"/>
                </collection-viewer>

                <linked-form-mapping>
                    <linked-form domain-object-type="rightholder" name="rightholder_form"
                                 inline="true"
                                 modal-width="700px" modal-height="565px"/>
                </linked-form-mapping>
                <created-objects>
                    <created-object domain-object-type="rightholder" text="Зелёное"/>
                </created-objects>
            </table-viewer>


            <label id="buildingsLabel">
                <text>Строения</text>
            </label>

            <label id="gardeningLabel">
                <text>Элементы озеленения</text>
            </label>

            <label id="mafsLabel">
                <text>МАФы</text>
            </label>

            <label id="planarLinearLabel">
                <text>Плоскостные и линейные</text>
            </label>

            <label id="othersLabel">
                <text>Иные объекты</text>
            </label>

            <label id="galleryLabel">
                <text>Галерея</text>
            </label>
        </widget-config>

    </form>
</configuration>