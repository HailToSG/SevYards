<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="inventory_form" domain-object-type="inventory" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab name="Инфо">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="infoLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Правообладатели">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="holdersLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Строения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="buildingsLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Объекты озеленения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="gardeningLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="МАФы">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="mafsLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Плоскостные и линейные">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="planarLinearLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Иные объекты">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="othersLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Галерея">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="galleryLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Инвентаризация</text>
            </label>

            <label id="infoLabel">
                <text>Инфо территории</text>
            </label>

            <label id="holdersLabel">
                <text>Правообладатели</text>
            </label>

            <label id="buildingsLabel">
                <text>Строения</text>
            </label>

            <label id="gardeningLabel">
                <text>Элементы озеленения</text>
            </label>

            <label id="mafsLabel">
                <text>МАФы</text>
            </label>

            <label id="planarLinearLabel">
                <text>Плоскостные и линейные</text>
            </label>

            <label id="othersLabel">
                <text>Иные объекты</text>
            </label>

            <label id="galleryLabel">
                <text>Галерея</text>
            </label>
        </widget-config>

    </form>
</configuration>