<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="inventory_form" domain-object-type="inventory" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab name="Инфо">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="dateStartLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="dateStartValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="dateEndLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="dateEndValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <!--<tab name="Правообладатели">-->
                    <!--<single-entry-group>-->
                        <!--<tab-group>-->
                            <!--<table>-->
                                <!--<tr>-->
                                    <!--<td h-align="right">-->
                                        <!--<widget id="holdersNameValue"/>-->
                                    <!--</td>-->
                                <!--</tr>-->
                            <!--</table>-->
                        <!--</tab-group>-->
                    <!--</single-entry-group>-->
                <!--</tab>-->

                <tab name="Строения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="residentialLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="residentialValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="permanentLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="permanentValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="temporaryLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="temporaryValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

                <tab name="Объекты озеленения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="bushLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="bushValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="greenHedgeLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="greenHedgeValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="lawnLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="lawnValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="parterreLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="parterreValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="treeLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="treeValue"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="verticalLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="verticalValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
                <tab name="МАФы">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="mafsLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
                <tab name="Плоскостные и линейные">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="planarLinearLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
                <tab name="Иные объекты">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="othersLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
                <tab name="Галерея">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="galleryLabel"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Инвентаризация</text>
            </label>

            <label id="dateStartLabel">
                <text>Время начала</text>
            </label>
            <date-box id="dateStartValue">
                <field-path value="start_time"/>
            </date-box>

            <label id="dateEndLabel">
                <text>Время конца</text>
            </label>
            <date-box id="dateEndValue">
                <field-path value="end_time"/>
            </date-box>


            <label id="infoLabel">
                <text>Инфо территории</text>
            </label>

            <label id="holdersNameLabel">
                <text>Наименование правообладателя</text>
            </label>

            <!--<linked-domain-objects-table id="holdersNameValue">-->
                <!--<field-path value=""-->
                <!--<linked-form-mapping>-->
                    <!--<linked-form domain-object-type="rightholder" name="rightholder_form"-->
                                 <!--inline="true"-->
                                 <!--modal-width="700px" modal-height="565px"/>-->
                <!---->
                <!--</linked-form-mapping>-->
                <!--<created-objects>-->
                    <!--<created-object domain-object-type="rightholder" text="Правообладатель"/>-->
                <!--</created-objects>-->
            <!--</linked-domain-objects-table>-->

            <label id="residentialLabel">
                <text>Жилые строения</text>
            </label>
            <linked-domain-objects-table id="residentialValue" modal-width="600px" modal-height="400px" >
                <field-path value="build_residential^inventory_id" on-root-delete="unlink"/>

                <linked-form name="bld_residential_form" inline="true"
                             domain-object-type="build_residential"/>
                <summary-table>
                    <summary-table-column header="ФИАС" widget-id="residentialFiasValue">
                        <pattern value="{fias}"/>
                    </summary-table-column>

                    <summary-table-column header="Адрес без ФИАС" widget-id="residentialNoFiasAddressValue">
                        <pattern value="{no_fias_address}"/>
                    </summary-table-column>

                    <summary-table-column header="Площадь" widget-id="residentialAreaValue">
                        <pattern value="{area}"/>
                    </summary-table-column>

                    <summary-table-column header="Вид" widget-id="residentialKindValue">
                        <pattern value="{kind}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="residentialStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>

            </linked-domain-objects-table>

            <label id="permanentLabel">
                <text>Нежилые кап. строения</text>
            </label>
            <linked-domain-objects-table id="permanentValue" modal-width="600px" modal-height="400px" >
                <field-path value="build_permanent^inventory_id" on-root-delete="unlink"/>

                <linked-form name="bld_permanent_form" inline="true"
                             domain-object-type="build_permanent"/>
                <summary-table>
                    <summary-table-column header="ФИАС" widget-id="permanentFiasValue">
                        <pattern value="{fias}"/>
                    </summary-table-column>

                    <summary-table-column header="Адрес без ФИАС" widget-id="permanentNoFiasAddressValue">
                        <pattern value="{no_fias_address}"/>
                    </summary-table-column>

                    <summary-table-column header="Площадь" widget-id="permanentAreaValue">
                        <pattern value="{area}"/>
                    </summary-table-column>

                    <summary-table-column header="Вид" widget-id="permanentKindValue">
                        <pattern value="{kind}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="permanentStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>

            </linked-domain-objects-table>

            <label id="temporaryLabel">
                <text>Нежилые некап. строения</text>
            </label>
            <linked-domain-objects-table id="temporaryValue" modal-width="600px" modal-height="400px" >
                <field-path value="build_temporary^inventory_id" on-root-delete="unlink"/>

                <linked-form name="bld_temporary_form" inline="true"
                             domain-object-type="build_temporary"/>
                <summary-table>

                    <summary-table-column header="Площадь" widget-id="temporaryAreaValue">
                        <pattern value="{area}"/>
                    </summary-table-column>

                    <summary-table-column header="Вид" widget-id="temporaryKindValue">
                        <pattern value="{kind}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="temporaryStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>

            </linked-domain-objects-table>

            <label id="bushLabel">
                <text>Куст</text>
            </label>
            <linked-domain-objects-table id="bushValue" modal-width="600px" modal-height="400px" >
            <field-path value="gard_bush^inventory_id" on-root-delete="unlink"/>

            <linked-form name="gard_bush_form" inline="true"
                         domain-object-type="gard_bush"/>
            <summary-table>
                <summary-table-column header="Тип" widget-id="bushKindValue">
                    <pattern value="{kind}"/>
                </summary-table-column>

                <summary-table-column header="Высота" widget-id="bushHeightValue">
                    <pattern value="{height}"/>
                </summary-table-column>

                <summary-table-column header="Состояние" widget-id="bushStateValue">
                    <pattern value="{state}"/>
                </summary-table-column>

            </summary-table>
            <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="greenHedgeLabel">
                <text>Живая изгородь</text>
            </label>
            <linked-domain-objects-table id="greenHedgeValue" modal-width="600px" modal-height="400px" >
                <field-path value="gard_green_hedge^inventory_id" on-root-delete="unlink"/>

                <linked-form name="gard_green_hedge_form" inline="true"
                             domain-object-type="gard_green_hedge"/>
                <summary-table>
                    <summary-table-column header="Высота" widget-id="greenHedgeHeightValue">
                        <pattern value="{height}"/>
                    </summary-table-column>

                    <summary-table-column header="Протяженность" widget-id="greenHedgeLengthValue">
                        <pattern value="{length}"/>
                    </summary-table-column>

                    <summary-table-column header="Состав" widget-id="greenHedgeCompositionValue">
                        <pattern value="{composition}"/>
                    </summary-table-column>

                    <summary-table-column header="Техника" widget-id="greenHedgeTrimTechniqueValue">
                        <pattern value="{trim_technique}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="greenHedgeStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="lawnLabel">
                <text>Газон</text>
            </label>
            <linked-domain-objects-table id="lawnValue" modal-width="600px" modal-height="400px" >
                <field-path value="gard_lawn^inventory_id" on-root-delete="unlink"/>

                <linked-form name="gard_lawn_form" inline="true"
                             domain-object-type="gard_lawn"/>
                <summary-table>
                    <summary-table-column header="Площадь" widget-id="lawnAreaValue">
                        <pattern value="{area}"/>
                    </summary-table-column>

                    <summary-table-column header="Тип" widget-id="lawnTypeValue">
                        <pattern value="{type}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="lawnStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="parterreLabel">
                <text>Цветник</text>
            </label>
            <linked-domain-objects-table id="parterreValue" modal-width="600px" modal-height="400px" >
                <field-path value="gard_parterre^inventory_id" on-root-delete="unlink"/>

                <linked-form name="gard_parterre_form" inline="true"
                             domain-object-type="gard_parterre"/>
                <summary-table>
                    <summary-table-column header="Тип" widget-id="parterreKindValue">
                        <pattern value="{kind}"/>
                    </summary-table-column>

                    <summary-table-column header="Размер" widget-id="parterreSizeValue">
                        <pattern value="{size}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="parterreStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="treeLabel">
                <text>Дерево</text>
            </label>
            <linked-domain-objects-table id="treeValue" modal-width="600px" modal-height="400px" >
                <field-path value="gard_tree^inventory_id" on-root-delete="unlink"/>

                <linked-form name="gard_tree_form" inline="true"
                             domain-object-type="gard_tree"/>
                <summary-table>
                    <summary-table-column header="Виж" widget-id="treeKindValue">
                        <pattern value="{kind}"/>
                    </summary-table-column>

                    <summary-table-column header="Высота" widget-id="treeHeightValue">
                        <pattern value="{height}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="treeStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="verticalLabel">
                <text>Вертикальное озеленение</text>
            </label>
            <linked-domain-objects-table id="verticalValue" modal-width="600px" modal-height="400px" >
                <field-path value="gard_vertical^inventory_id" on-root-delete="unlink"/>

                <linked-form name="gard_vertical_form" inline="true"
                             domain-object-type="gard_vertical"/>
                <summary-table>
                    <summary-table-column header="Площадь" widget-id="verticalAreaValue">
                        <pattern value="{area}"/>
                    </summary-table-column>

                    <summary-table-column header="Состояние" widget-id="verticalStateValue">
                        <pattern value="{state}"/>
                    </summary-table-column>

                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

            <label id="mafsLabel">
                <text>МАФы</text>
            </label>

            <label id="planarLinearLabel">
                <text>Плоскостные и линейные</text>
            </label>

            <label id="othersLabel">
                <text>Иные объекты</text>
            </label>

            <label id="galleryLabel">
                <text>Галерея</text>
            </label>
        </widget-config>

    </form>
</configuration>