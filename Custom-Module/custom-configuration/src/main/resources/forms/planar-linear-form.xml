<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <!-- Форма для доменного объекта "Жилое строение" -->
    <form name="planar_linear_form" domain-object-type="planar_linear" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td h-align="left">
                            <widget id="headerLabel"/>
                        </td>
                    </tr>
                </table>
            </header>

            <body display-single-tab="true">

                <tab>
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="typePlanarLinearLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="typePlanarLinearValue"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="statePlanarLinearLabel"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="statePlanarLinearValue"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>

            </body>

        </markup>
        <widget-config>

            <label id="headerLabel">
                <text>Плоскостные-линейные</text>
            </label>

            <label id="typePlanarLinearLabel">
                <text>Тип объекта</text>
            </label>
            <text-box id="typePlanarLinearValue">
                <field-path value="type"/>
            </text-box>

            <label id="statePlanarLinearLabel">
                <text>Состояние объекта</text>
            </label>
            <text-box id="statePlanarLinearValue">
                <field-path value="state"/>
            </text-box>

        </widget-config>
    </form>
</configuration>